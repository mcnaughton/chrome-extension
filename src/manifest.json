{
    "name": "McNaughton Debugger",
    "description": "A transparent look into the current site and its content, authors, images and advertisements.",
    "version": "0.1",
    "permissions": ["tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistant": true
    },
    "content_scripts": [{
        "matches": [
            "*://mcnaughton.media/",
            "*://mcnaughton.media/*",
            "*://www.davisenterprise.com/",
            "*://www.davisenterprise.com/*",
            "*://www.dailyrepublic.com/",
            "*://www.dailyrepublic.com/*",
            "*://www.mtdemocrat.com/",
            "*://www.mtdemocrat.com/*",
            "*://www.villagelife.com/",
            "*://www.villagelife.com/*"
        ],
        "css": ["styles.css"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": [
        "injected.js"
    ],
    "browser_action": {
        "default_icon": "icon_128.png",
        "icons": {
          "16": "icon_16.png",
           "48": "icon_48.png",
          "128": "icon_128.png" },
        "default_title": "McNaughton Transparency",
        "default_popup": "transparency.html",
        "width": 600,
        "height": 400
    },
    "manifest_version": 3
}
