{
    "name": "McNaughton",
    "description": "A tool to make McNaughton's sites transparent, along with their content, authors, images and advertisements.",
    "version": "0.1",
    "permissions": ["tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistant": true
    },
    "content_scripts": [{
        "matches": [
            "*://mcnaughton.media/",
            "*://mcnaughton.media/*",
            "*://www.davisenterprise.com/",
            "*://www.davisenterprise.com/*",
            "*://www.dailyrepublic.com/",
            "*://www.dailyrepublic.com/*",
            "*://www.mtdemocrat.com/",
            "*://www.mtdemocrat.com/*",
            "*://www.villagelife.com/",
            "*://www.villagelife.com/*"
        ],
        "css": ["styles.css"],
        "js": ["content.js"]
    }],
    "web_accessible_resources": [
        "injected.js"
    ],
    "page_action": {
        "default_icon": {
          "19": "icon_19.png",
           "38": "icon_38.png" },
        "default_title": "McNaughton",
        "default_popup": "transparency.html",
        "width": 600,
        "height": 400
    },
    "icons": {
      "16": "icon_16.png",
       "48": "icon_48.png",
      "128": "icon_128.png" },
    "manifest_version": 3
}
